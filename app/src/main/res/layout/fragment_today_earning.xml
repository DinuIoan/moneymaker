<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".earnings.TodayEarningsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/today_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Today's earnings: 1568$"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/today_title"
            android:id="@+id/today_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/today_add_earning"/>

        <Button
            android:id="@+id/today_add_earning"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/today_add_earning"
            android:textSize="18sp"
            android:text="ADD EARNING"
            android:translationZ="10dp"/>

    </RelativeLayout>

</FrameLayout>