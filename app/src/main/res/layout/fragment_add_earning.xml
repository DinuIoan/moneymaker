<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_add_earnings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#EEEEEE">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter amount:"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#455A64"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/amount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#455A64"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:clickable="false" />
        </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/unu"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/doi"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"/>

                <Button
                    android:id="@+id/trei"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="3"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/patru"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="4"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/cinci"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="5"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/sase"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="6"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/sapte"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="7"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/opt"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="8"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/noua"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="@dimen/numbers"
                    android:layout_height="@dimen/numbers"
                    android:background="@drawable/numbers_style"
                    android:text="9"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:translationZ="8dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/point"
                android:layout_width="@dimen/numbers"
                android:layout_height="@dimen/numbers"
                android:layout_margin="2dp"
                android:background="@drawable/point_style"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="."
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:translationZ="8dp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="@dimen/numbers"
                android:layout_height="@dimen/numbers"
                android:layout_margin="2dp"
                android:background="@drawable/numbers_style"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:translationZ="8dp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="@dimen/numbers"
                android:layout_height="@dimen/numbers"
                android:layout_margin="2dp"
                android:background="@drawable/del_style"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:translationZ="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/photography_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:clickable="true"
                android:padding="3dp">

            <Button
                android:id="@+id/photography"
                android:layout_margin="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/photography"
                android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Photography"/>
                <CheckBox
                    android:id="@+id/photography_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/social_media_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/social_media"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/social_media"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Social media"/>
                <CheckBox
                    android:id="@+id/social_media_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/websites_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/websites"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/websites"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Websites"/>
                <CheckBox
                    android:id="@+id/websites_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/apps_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/apps"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/apps"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Apps"/>
                <CheckBox
                    android:id="@+id/apps_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blog_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/blog"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blog"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Blog"/>
                <CheckBox
                    android:id="@+id/blog_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/survey_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/survey"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/survey"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Survey"/>
                <CheckBox
                    android:id="@+id/survey_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/email_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/email_marketing"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/email"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Email marketing"/>
                <CheckBox
                    android:id="@+id/email_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/develop_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/develop"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/develop"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Develop"/>
                <CheckBox
                    android:id="@+id/develop_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cryptocurrency_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp">

                <Button
                    android:id="@+id/cryptocurrency"
                    android:layout_margin="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/crypto"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Crypto"/>
                <CheckBox
                    android:id="@+id/crypto_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/add_button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttons_style"
                android:text="ADD"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>